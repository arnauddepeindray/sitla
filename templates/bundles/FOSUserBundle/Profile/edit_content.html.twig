{% extends 'front/layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block content %}


    <div class="login-page" style="background-image: url({{ asset('images/front/france.png') }});background-size: cover;background-repeat: no-repeat;">
        <nav class="navbar navbar-light navbar-expand-md fixed-top bg-white">
            <div class="container-fluid"><a class="navbar-brand" href="{{ path('front_homepage') }}">SITLA 45</a><button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse"
                     id="navcol-1">
                    <ul class="nav navbar-nav">
                        <li class="nav-item" role="presentation"><a class="nav-link" href="{{ path('fos_user_profile_show') }}">Mes informations</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link active" href="{{ path('fos_user_profile_edit') }}">Modifier mes informations</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="{{ path('fos_user_change_password') }}">Modifier mon mot de passe</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="filter"></div>
        <div class="login-clean">
            {{ form_start(form, { 'action': path('fos_user_profile_edit'), 'attr': { 'class': 'fos_user_profile_edit' } }) }}
            {{ form_widget(form) }}
            <div>
                <input type="submit" value="{{ 'profile.edit.submit'|trans }}" class="btn btn-primary btn-block"/>
            </div>
            {{ form_end(form) }}
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


