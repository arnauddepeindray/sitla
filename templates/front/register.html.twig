{% extends 'front/layout.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/front/login.css') }}">
{% endblock %}

{% block content %}
    <div class="login-page" style="background-image: url({{ asset('images/front/france.png') }});background-size: cover;background-repeat: no-repeat;">
        <nav class="navbar navbar-light navbar-expand-md fixed-top bg-white">
            <div class="container-fluid"><a class="navbar-brand" href="{{ path('front_homepage') }}">SITLA 45</a><button data-toggle="collapse" class="navbar-toggler" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse"
                     id="navcol-1">
                    <ul class="nav navbar-nav">
                        <li class="nav-item" role="presentation"><a class="nav-link" href="{{ path('fos_user_security_login') }}">Connexion</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link active" href="{{ path('front_register') }}">Inscription</a></li>
                        <li class="nav-item" role="presentation"><a class="nav-link" href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="filter"></div>
        <div class="login-clean">
            {{ form_start(registerForm) }}
                <h2>Inscrption</h2>
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    <span class="closebtn" style="cursor: pointer" onclick="this.parentElement.style.display='none';">&times;</span>
                    {{ message }}
                </div>
            {% endfor %}
                <p>Utiliser le formulaire ci-dessous pour vous adhérer.</p>
                <div class="form-group">
                    <label for="lastname">Nom</label>
                    {{ form_widget(registerForm.lastname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="firstname">Prenom</label>
                    {{ form_widget(registerForm.firstname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="phone">Tel</label>
                    {{ form_widget(registerForm.phone, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    {{ form_widget(registerForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    <label for="comment">Commentaire</label>
                    {{ form_widget(registerForm.comment, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(registerForm.submit, {'attr': {'class': 'btn btn-primary btn-block'}, "label": "Envoyer"}) }}
                </div>

            {{ form_end(registerForm) }}
        </div>


    </div>
{% endblock %}


{% block javascripts %}
{{ parent() }}
{% endblock %}
