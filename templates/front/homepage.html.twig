                    <div class="order-md-first col-md-6 col-12">
                        <h3>Adresse</h3>
                        <div class="row">
                            <div class="col-md-6 col-12">
                                <p><br>10 rue Theophile Naudy<br>45000 Orléans</p>
                                <p>Téléphone : +33 02 38 53 48 11<br>GSM : +33 06 95 46 18 21<br>Email : <a href="mailto:sitla45@hotmail.com" style="color: white">sitla45@hotmail.com</a></p>
                            </div>
                            <div class="col-md-6 col-12">
                                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2674.5046009712423!2d1.9242631156409766!3d47.90727307920581!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e4fb4c9de09c71%3A0x4e117d218f55f127!2s10%20Rue%20Th%C3%A9ophile%20Naudy%2C%2045000%20Orl%C3%A9ans!5e0!3m2!1sfr!2sfr!4v1569057349609!5m2!1sfr!2sfr"  frameborder="0" style="border:0;" allowfullscreen="" class="w-100"></iframe>

                            </div>
                        </div>
                    </div>
                    <div class="order-first mb-5 col-md-6 col-12">
                        <h3>Poser une question</h3>
                        {{ form_start(contactForm) }}
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    {{ form_widget(contactForm.nom, {'attr': {"class": 'form-control'}}) }}

                                </div>
                                <div class="form-group col-md-6">
                                    {{ form_widget(contactForm.email, {'attr': {"class": 'form-control'}}) }}

                                </div>
                            </div>
                            <div class="form-group">
                                {{ form_widget(contactForm.message, {'attr': {"class": 'form-control', 'row': '5'}}) }}
                            </div>
                            {{ form_widget(contactForm.submit, {"attr": {'class': "btn btn-primary"}, "label": "Envoyer votre message"}) }}

                        {{ form_end(contactForm) }}
                    </div>
                </div>
            </div>
        </section>



{% endblock %}
