        <section class="pt-5 pb-5 text-white section" id="services" data-colormenu="#32AC97" data-colormenuItem="#46DCC7" data-menuItem='#services'>
            <div class="container">
                <div class="row mt-5 pt-5">
                    <div class="col-12">
                        {% for cate in category %}
                        <div class="service-list mb-5">
                            <div class="row">
                                <div class="col-md-3 d-flex justify-content-center align-items-center col-12 pl-md-5">
                                    <a href="{{ path('front_member', {'slug': cate.slug}) }}"> <img src="{{ vich_uploader_asset(cate, 'photoFile') }}" class="img-fluid" alt="SITLA 45 {{ cate.slug }}"/></a>
                                </div>
                                <div class="col-md-9 d-flex justify-content-center align-items-center col-12 mt-5">
                                    <div class="container">
                                        <div class="pg-empty-placeholder">
                                            <h3>{{ cate.title }}</h3>
                                            <p>{{ cate.description }}</p>
                                            <a href="{{ path('front_member', {'slug': cate.slug}) }}">En savoir plus</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        {% endfor %}

                    </div>
                </div>
            </div>
        </section>
        <section class="pt-5 pb-5 text-white section" id="contact" data-colormenu="#3F9FC9" data-colormenuItem="#37637F" data-menuItem='#contact'>
            <div class="container">
                <h3 class="text-center title">Nous contacter</h3>
